{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["apps/**/*.ts", "apps/**/*.tsx", "packages/**/*.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true
  },
  "overrides": [
    {
      "include": ["apps/web/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "off"
          }
        }
      }
    },
    {
      "include": ["apps/web/src/components/charts/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "off",
            "noExplicitAny": "off"
          },
          "a11y": {
            "noNoninteractiveTabindex": "off",
            "useKeyWithClickEvents": "off"
          }
        }
      }
    }
  ]
}
